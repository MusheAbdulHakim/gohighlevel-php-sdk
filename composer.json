{
    "name": "mrshoikot/gohighlevel-php",
    "description": "php sdk for gohighlevel api",
    "keywords": ["php", "ghl","gohighlevel","api","skd", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mushe Abdul-Hakim",
            "email": "musheabdulhakim99@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "php-http/discovery": "^1.20",
        "php-http/multipart-stream-builder": "^1.4",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "*",
        "psr/http-factory-implementation": "*",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "^2.7",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.6",
        "pestphp/pest-plugin-type-coverage": "^3.2",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.2",
        "symfony/var-dumper": "^6.4.0|^7.2.0"
    },
    "autoload": {
        "psr-4": {
            "MusheAbdulHakim\\GoHighLevel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": false
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix .",
        "test:lint": "php-cs-fixer fix . --dry-run",
        "refacto": "rector",
        "test:refacto": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:refacto",
            "@test:types",
            "@test:unit"
        ]
    }
}
